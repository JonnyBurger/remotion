{
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:esm": {
      "outputs": ["dist/esm/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "@remotion/example#lint": {
      "dependsOn": ["@remotion/eslint-config#build"]
    },
    "@remotion/it-tests#test": {
      "dependsOn": [
        "^build",
        "@remotion/example#test",
        "@remotion/example#build"
      ]
    }
  },
  "npmClient": "pnpm"
}
