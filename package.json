{
  "name": "remotion-monorepo",
  "version": "0.0.0",
  "private": true,
  "license": "SEE LICENSE IN LICENSE.md",
  "scripts": {
    "test": "turbo run lint test",
    "lint": "turbo run lint",
    "build": "turbo run build",
    "ci": "turbo run build lint test --concurrency=50%",
    "watch": "pnpm run --recursive --stream --parallel watch",
    "clean": "rm -rf packages/**/dist && lerna clean --yes && rm -rf node_modules && rm -rf .cache && rm -rf packages/**/tsconfig.tsbuildinfo && rm -rf packages/**/.turbo && rm -rf packages/**/.rollup.cache",
    "release": "pnpm recursive publish",
    "release-alpha": "pnpm recursive publish --tag=alpha --no-git-checks"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=3"
  },
  "devDependencies": {
    "@types/node": "^18.11.2"
  },
  "dependencies": {
    "turbo": "1.8.6"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@7.7.1"
}
